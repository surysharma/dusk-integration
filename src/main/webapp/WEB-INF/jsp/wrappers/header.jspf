<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<div class="header">
    <div class="login_logout">
        ${ModelConstants.LOGGED_IN.name}
        <c:choose>
            <c:when test="${ModelConstants.LOGGED_IN.name == 'LOGGED_IN'}">
                <a href="/login">Login</a>
            </c:when>
            <c:otherwise><a href="/j_spring_security_logout">Logout</a></c:otherwise>
        </c:choose>

    </div>
</div>